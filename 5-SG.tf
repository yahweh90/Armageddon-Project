resource "aws_security_group" "tokyo_sg" {
  provider = aws.tokyo
  vpc_id   = aws_vpc.tokyo_vpc.id

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Name = "Tokyo Security Group"
  }
}

